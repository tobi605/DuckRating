<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/item_image_description" />

    <RatingBar
        android:id="@+id/item_user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/item_image"
        android:numStars="5"
        android:padding="3dp"
        android:stepSize="1" />

    <TextView
        android:id="@+id/item_general_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_user_rating"
        android:layout_toEndOf="@id/item_user_rating"
        android:layout_toRightOf="@id/item_user_rating"
        android:padding="3dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_number_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/item_comments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="3dp"
        android:textSize="23sp" />

    <Button
        android:id="@+id/item_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_user_rating"
        android:background="?android:selectableItemBackground"
        android:padding="3dp"
        android:text="@string/duck_item_button" />
</RelativeLayout>